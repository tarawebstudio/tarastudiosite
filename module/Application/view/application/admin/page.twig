{% extends 'layout/layout_admin.twig' %}

{% block content %}



            <!-- column 2 -->
            <ul class="list-inline pull-right">
                <li><a href="#"><i class="glyphicon glyphicon-cog"></i></a></li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-comment"></i><span class="count">3</span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">1. Is there a way..</a></li>
                        <li><a href="#">2. Hello, admin. I would..</a></li>
                        <li><a href="#"><strong>All messages</strong></a></li>
                    </ul>
                </li>
                <li><a href="#"><i class="glyphicon glyphicon-user"></i></a></li>
                <li><a title="Add Widget" data-toggle="modal" href="#addWidgetModal"><span class="glyphicon glyphicon-plus-sign"></span> Add Widget</a></li>
            </ul>
            <a href="#"><strong><i class="glyphicon glyphicon-dashboard"></i> My Dashboard</strong></a>
            <hr>

            <div class="row">
                <!-- center left-->
                <div class="col-md-6">
                    {% if page.id %}

                              <a href="/admin/delpage/{{ page.id }}"><i class="glyphicon glyphicon-wrench"></i> Удалить страницу</a>
                    {% endif %}
                       <form action="/admin/updatepage/" method="post" class="form form-vertical">
                            <div class="control-group">
                                    {% if page.id %}<input type="hidden" value="{{ (page.id) ? page.id : '' }}" name="id" />{% endif %}
                                    <label>Заголовок в меню</label>
                                    <div class="controls">                       
                                           <input name="title" class="form-control" value="{{ (page.title) ? page.title : '' }}" type="text" />
                                    </div>
                            </div>                                           
                               <div class="control-group">
                                    <label>Содержание</label>
                                    <div class="controls">                            
                                                <textarea class="form-control" rows="25" name="content">{{ (page.content) ? page.content : ''}}</textarea>
                                    </div>
                            </div>                                                  
                                <div class="control-group">
                                    <label>Порядковый номер меню</label>
                                    <div class="controls">
                                        

                                           {% if page.id %}
                                                <select class="form-control" name="num">
                                                     {% for i in  MainMenuHelper() %}
                                                        <option {{ page.num==loop.index ? 'selected' : '' }}>{{ (loop.index) ? loop.index : '' }}</option>
                                                     {% endfor %} 
                                                </select>   
                                           {% else %}
                                                        <input name="num" class="form-control" value="" type="text" />
                                           {% endif %}

                                             
   
      
                                        
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label></label>
                                    <div class="controls">
                                        <button type="submit" class="btn btn-primary">
                                            Сохранить
                                        </button>
                                    </div>
                                </div>                           
                       </form>

                
                    
                </div>
                <!--/col-->
                <div class="col-md-6"></div>
                <!--/col-span-6-->

            </div>
            <!--/row-->

            <hr>

            <a href="#"><strong><i class="glyphicon glyphicon-comment"></i> Discussions</strong></a>

            <hr>

            <div class="row"></div>
        
{% endblock %}
